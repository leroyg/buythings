<%= content_for(:title) do %>
  Product Listing
<% end %>
<div class="page-title">
  <h1>Bruised Elbows | We Skate Shoppe </h1>
  <h3>They See Me Rolling...</h3>


  <% if @cart %>
    <%= link_to cart_path do %>
      <%= @cart.cart_items.sum('quantity')%>
      <i class="fa fa-shopping-cart fa-2x"></li>
    <% end %>
  <% end %>
</div>

<% @products.in_groups_of(3, false) do |products| %>
  <div class="row">
  <% products.each do |product| %>
    <div class="col-xs-6 col-sm-4">
      <h2><%= link_to product.name, product %></h2>
      <%= link_to product do %>
        <%= image_tag product.photo.thumb, class: "img-responsive" %>
      <% end %>
      <%= number_to_currency product.price_in_dollars %>
    </div>
  <% end %>
  </div>
<% end %>
